<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamWxApp.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="True"
             xmlns:m="clr-namespace:XamWxApp.Models">
    
        <StackLayout>
            <Label Text="Weather Alerts"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"/>
            <StackLayout Orientation="Horizontal"
                         Spacing="20"
                         Padding="20">
                <Entry x:Name="StateCode"
                       Placeholder="ex. TX"
                       TextTransform="Uppercase"
                       HorizontalOptions="FillAndExpand"/>
                <Button x:Name="GetAlertsButton"
                        Clicked="GetAlertsButton_Clicked"
                        Text="Get Alerts"/>
            </StackLayout>
            <Label x:Name="AlertsCount"
                   FontSize="Small"
                   Margin="20,0"
                   HorizontalOptions="Start"
                   TextColor="Gray"/>
            <ListView x:Name="AlertsList">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="m:Alert">
                    <TextCell Text="{Binding Event}"
                              Detail="{Binding Sent, StringFormat='Sent: {0:M/dd/yy hh:mmtt}'}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
</ContentPage>

